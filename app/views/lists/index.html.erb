<% if user_signed_in? %>
<a href="/users/sign_out" data-method="delete" rel="nofollow">Logout</a>
<% else %>
<a href="/users/sign_in"  rel="nofollow">Logout</a>
<% end %>

<h1>Your List</h1>
  <%= link_to 'New List', new_list_url %>
  <br>
  <br>
<table>
  <tr>
    <th>Name</th>
  </tr>
 
  <% @lists.each do |list| %>
      <ul>
      <li><%= list.name %>    
      <%= link_to 'Show', list_url(list.id) %>
      <%= list.count_tasks_not_completed %> left            
      </li>
      </ul>  
  <% end %> 
  </table>
  
  completed lists :
    <% @lists.each do |list| %>
      <% if (list.count_tasks_not_completed == 0) %>
      <%= link_to list.name, list_url(list.id) %>,
      <% else %>
    <% end %> 
     <% end %> 
 
  
  